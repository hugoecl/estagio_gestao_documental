---
import Layout from "@layouts/Layout.astro";
import SearchBar from "@components/contracts/SearchBar.astro";
import LicensesLoader from "@components/radiological-protection-licenses/LicensesLoader.svelte";

import "@styles/form.css";
---

<Layout title="Proteção Radiológica - Licenças">
    <div class="flex items-center justify-end mb-7 gap-4">
