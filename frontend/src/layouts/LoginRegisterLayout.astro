---
import CommonHead from "@components/common/CommonHead.astro";
import Image from "astro/components/Image.astro";
import jccLogoBig from "@assets/jcc_big.svg";
import "@assets/app.css";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="pt" data-theme="corporate">
  <CommonHead title={title} serverRouter={true} />

  <body class="bg-base-300">
    <div id="toast-top" class="toast toast-top toast-center"></div>

    <div class="flex flex-col justify-center items-center h-screen">
      <div class="flex items-center mb-25">
        <Image src={jccLogoBig} alt="JCC Logo" class="w-32 mr-4" />
        <h1 class="text-2xl font-bold">GESTÃO DOCUMENTAL</h1>
      </div>
      <hr class="w-1/3 border-secondary mb-5" />
      <slot />
      <hr class="mt-10 w-1/3 border-secondary" />
      <div class="mt-20 text-center">
        <p>João Carlos Costa - Diagnóstico por Imagem, SA © 2025</p>
        <p>Todos os direitos reservados</p>
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
