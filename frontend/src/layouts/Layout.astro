---
import NavBar from "@components/NavBar.astro";
import "../assets/app.css";

interface Props {
  title: string;
  notRenderNav?: boolean;
}
const { title, notRenderNav } = Astro.props;
---

<!doctype html>
<html lang="pt" data-theme="corporate">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-base-300">
    <div id="toast-top" class="toast toast-top toast-center"></div>
    <div id="toast-bottom-right" class="toast toast-end"></div>

    {
      !notRenderNav && (
        <NavBar>
          <slot />
        </NavBar>
      )
    }
    {notRenderNav && <slot />}
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
