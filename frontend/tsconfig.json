{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@api/*": ["src/api/*"],
      "@stores/*": ["src/stores/*"],
      "@lib/types/*": ["src/types/*"],
    },
    "types": ["./src/globals.d.ts"]
  }
}
